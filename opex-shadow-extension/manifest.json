{
  "manifest_version": 3,
  "name": "Opex Shadow Recorder",
  "description": "Record clicks and input fields across any website for import into Opex.",
  "version": "1.0.0",
  "permissions": ["tabs", "storage", "scripting"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Opex Shadow Recorder"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
